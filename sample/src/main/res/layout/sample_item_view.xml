<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sample_item_name_tick_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="16dp"
            android:text="@string/icon_tick"
            android:textSize="20sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/sample_item_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/sample_item_name_tick_view"
            android:layout_toStartOf="@id/sample_item_name_tick_view"
            android:padding="16dp"
            android:textSize="16sp"/>

    </RelativeLayout>



</merge>